script/source = "extends StaticBody2D

export (float) var wait_time;
export (int) var max_status = 6; 

var active = false;
var status = 0;

func _process(delta):
	$Sprite.frame = status;

func _ready():
	$Timer.wait_time = wait_time;

func _on_shot():
	status = (status+1)%(max_status+1);
	if status > 0:
		active = true;
		$Timer.start();
	$Sprite.frame = status;

func deactivate():
	status = 0;
	active = false;

func _on_Timer_timeout():
	deactivate();
"

