onready var targetNodePath = Global.playerNodePath

func set_target(target):
	targetNodePath = target;

func _process(delta):
	$Sprite.flip_h = get_node(targetNodePath).position.x > position.x
	pass

func _on_MoveTimer_timeout():
	$Sprite/AnimationPlayer2.play_backwards(\"fade_alpha\");
	yield($Sprite/AnimationPlayer2, \"animation_finished\");
	position = $\"/root/Global\".get_saved_player_position();
	$Sprite/AnimationPlayer.play(\"grab\");
	$Sprite/AnimationPlayer2.play(\"fade_alpha\");

func _on_Area2D_body_entered(body):
	if body.has_method(\"_on_hit\"):
		body._on_hit();
